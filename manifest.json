{
  "manifest_version": 2,
  "name": "Tab Stats PHD",
  "version": "1.2",

  "description": "N/A",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["borderify.js"]
    }
  ],

  "permissions": ["tabs", "storage"],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Tab Counter"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "applications": {
    "gecko": {
      "id": "tab-stats-PHD@dev.local"
    }
  }
}